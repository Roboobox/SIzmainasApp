<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/infoDatums"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bottom_dark_border"
        android:gravity="center"
        android:paddingBottom="7dp"
        android:paddingTop="10dp"
        android:text="Datums"
        android:textColor="@color/colorDarkBlue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/infoDatums" />

    <ImageButton
        android:id="@+id/buttonNextInfoDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/listInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:paddingRight="5sp"
        app:srcCompat="@mipmap/ic_nextday" />
</RelativeLayout>