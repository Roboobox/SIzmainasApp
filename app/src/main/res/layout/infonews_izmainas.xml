<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/full_border_dark"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:id="@+id/textInfoNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="37dp"
            android:focusable="false"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Info"
            android:textColor="@color/colorDarkBlue"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textInfoNewsSkol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textInfoNews"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:focusable="false"
            android:paddingBottom="5dp"
            android:text="Skolotajs"
            android:textColor="@color/colorDarkBlue"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imageViewInfoNewsPin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:focusable="false"
            app:srcCompat="@drawable/ic_infopin" />

    </RelativeLayout>
</LinearLayout>