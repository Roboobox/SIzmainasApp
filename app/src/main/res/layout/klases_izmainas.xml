<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorRed"
    tools:context=".KlasesIzmainas">

    <ImageButton
        android:id="@+id/buttonSwitchLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDiena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:paddingLeft="5dp"
        android:paddingRight="8dp"
        app:srcCompat="@drawable/ic_nextleft" />

    <ImageButton
        android:id="@+id/buttonSwitchRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textDiena"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:onClick="buttonOnClickRight"
        android:paddingLeft="8dp"
        android:paddingRight="5dp"
        app:srcCompat="@drawable/ic_nextright" />

    <TextView
        android:id="@+id/textDiena"
        android:layout_width="158dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Pirmdiena"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/klasesIzmainasFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonSwitchLeft"
        android:layout_gravity="bottom"
        android:layout_weight="0.06"
        android:background="@color/colorWhite">

    </FrameLayout>

</RelativeLayout>