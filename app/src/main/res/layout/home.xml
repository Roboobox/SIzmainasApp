<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:scrollbars="none"
    android:tag="normal_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/dzimsanasDienuSvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:paddingLeft="9sp"
                android:paddingRight="9sp"
                android:paddingTop="3dp"
                android:text="Šodien dzimšanas dienu svin!"
                android:textColor="@color/colorRed"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/skolotajiSvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/skolotajiText"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/colorDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/skolotajiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dzimsanasDienuSvin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="19dp"
                android:text="Skolotāji:"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/VidusskolaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/skolotajiSvin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Vidusskolā:"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vidusskolaSvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/VidusskolaText"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TextView"
                android:textColor="@color/colorDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pamatskolaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vidusskolaSvin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Pamatskolā:"
                android:textColor="@color/colorRed"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pamatskolaSvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pamatskolaText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="TextView"
                android:textColor="@color/colorDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/infoTodayHome"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/klasesIzmainasList"
                android:background="@drawable/bottom_dark_border"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:text="Klases izmaiņas"
                android:textColor="@color/colorOrange"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vardadienaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/pamatskolaSvin"
                android:layout_marginTop="15dp"
                android:background="@drawable/top_border"
                android:gravity="center"
                android:paddingTop="9dp"
                android:text="Šodien vārda dienu svin!"
                android:textColor="@color/colorRed"
                android:textSize="20sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/vardaDienuSvin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/vardadienaText"
                android:layout_marginTop="0dp"
                android:background="@drawable/list_border"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:text="TextView"
                android:textColor="@color/colorDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@color/colorRed"
                android:gravity="center"
                android:text="Sākums"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

            <ListView
                android:id="@+id/klasesIzmainasList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView14"
                android:layout_weight="1"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageKlasesIzmainasNav"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/textView14"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/izmainunav" />

            <TextView
                android:id="@+id/textInfoHomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/vardaDienuSvin"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/klasesIzmainasList"
                android:background="@drawable/bottom_dark_border"
                android:gravity="center"
                android:text="Informācija šodien"
                android:textColor="@color/colorOrange"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/infoTodayHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/textInfoHomeTitle"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bottom_dark_border"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="15sp"
                android:paddingRight="5sp"
                android:text="TextView"
                android:textColor="@color/colorDarkBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>