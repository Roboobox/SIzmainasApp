<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorDarkBlue"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Par lietotni"
        android:textColor="@color/colorWhite"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView70"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:text="Ieteikumi un kļūdas:"
        android:textColor="@color/colorRed"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView71"
        android:layout_marginTop="9dp"
        android:autoLink="email"
        android:background="@drawable/bottom_dark_border"
        android:paddingBottom="15sp"
        android:paddingLeft="15sp"
        android:text="stunduizmainas.app@gmail.com"
        android:textColor="@color/colorDarkBlue"
        android:textColorLink="@color/colorDarkBlue"
        android:textSize="21sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView72"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Izstrādātājs: Roberts Turks"
        android:textColor="#808080"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonDialogInfoExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView73"
        android:layout_marginTop="21dp"
        android:backgroundTint="@color/colorRed"
        android:text="Iziet"
        android:textSize="20sp" />
</RelativeLayout>