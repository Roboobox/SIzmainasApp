<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/full_border_red">

    <TextView
        android:id="@+id/textView65"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        android:gravity="center_horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:text="Neizdevās izveidot savienojumu!"
        android:textAlignment="center"
        android:textColor="@color/colorRed"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_above="@+id/buttonReload"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/buttonReload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/full_border_dark"
        android:paddingBottom="11dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="11dp"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/textView66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonReload"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Atkārtot"
        android:textColor="@color/colorDarkBlue"
        android:textSize="17sp" />
</RelativeLayout>